#!/bin/bash

# This script is generated by CMake

SRC_FILES=$(find @SRC_DIR@ -type f \( -name "*.c" -o -name "*.cpp" \))

cppcheck --enable=all --xml --std=c@CMAKE_C_STANDARD@ --std=c++@CMAKE_CXX_STANDARD@ ${SRC_FILES} 2> @LINTING_RUNTIME_DIR@/LintingReport.xml

echo "Linting report has been created under build/lint/"

# --enable=all abilita tutti commenti su codice morto, variabili non inizializzate, etc.

#
