# Project-related settings
PROJECT_NAME           = @PROJECT_NAME@
PROJECT_NUMBER         = @PROJECT_VERSION@
OUTPUT_DIRECTORY       = @CMAKE_BINARY_DIR@/documentation
INPUT                  = @PROJECT_DIR@/include @PROJECT_DIR@/src
RECURSIVE              = YES

# Build settings
GENERATE_LATEX         = NO
GENERATE_HTML          = YES
GENERATE_MAN           = NO
GENERATE_XML           = NO

# Source code settings
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO
EXTRACT_LOCAL_CLASSES  = YES
EXTRACT_LOCAL_METHODS  = NO

# Documentation layout settings
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES
STRIP_CODE_COMMENTS    = YES

# Tag and warning settings
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_NO_PARAMDOC       = YES
WARN_AS_ERROR          = NO

# Input filtering
FILE_PATTERNS          = *.h *.hpp *.c *.cpp *.cc
EXTENSION_MAPPING      = h=cpp

# Diagrams
HAVE_DOT               = YES
DOT_NUM_THREADS        = 4
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
CLASS_DIAGRAMS         = YES
COLLABORATION_GRAPH    = YES
GRAPHICAL_HIERARCHY    = YES
DIRECTORY_GRAPH        = YES
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES

# Optimizations
OPTIMIZE_OUTPUT_FOR_C  = YES
OPTIMIZE_OUTPUT_FOR_CXX= YES

# Miscellaneous
QUIET                  = NO